<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/song1"
        android:layout_width="120dp"
        android:layout_height="0dp"
        android:layout_marginBottom="258dp"
        android:text="song 1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/song2" />

    <Button
        android:id="@+id/song2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="7dp"
        android:text="song 2"
        app:layout_constraintBottom_toTopOf="@+id/song1"
        app:layout_constraintEnd_toEndOf="@+id/song1"
        app:layout_constraintStart_toStartOf="@+id/song1"
        app:layout_constraintTop_toBottomOf="@+id/frameLayout" />

    <FrameLayout
        android:id="@+id/frameLayout"
        android:layout_width="288dp"
        android:layout_height="182dp"
        android:layout_marginTop="60dp"
        android:layout_marginBottom="81dp"
        app:layout_constraintBottom_toTopOf="@+id/song2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </FrameLayout>
</androidx.constraintlayout.widget.ConstraintLayout>